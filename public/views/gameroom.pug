doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title JavaScript Game | Rock Paper Scissors
    link(rel="stylesheet", href="rockpaperscissors/css/gameroom.css")
    script(src="/js/gameroom.js", defer)
  body


    section.container
        div.game_room_id
            h1 GameRoomID:  
            h1#roomidheader #{roomId}
        div.result_field
            div.result_images
                span.user_result
                    img(src="/images/rock.png", alt="")
                span.cpu_result
                    img(src="/images/rock.png", alt="")
            div.result Wait for opponent...

        div.option_images
            span.option_image
                img(src="/images/rock.png", alt="")
                p Sten
            span.option_image
                img(src="/images/scissors.png", alt="")
                p Saks
            span.option_image
                img(src="/images/paper.png", alt="")
                p Papir 
        .scoreBoard
            span.score1
            p#yourWins Dine wins: 0
            span.score2
            p#opponentWins Modstander wins: 0